{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --registry http://s1.web.porsche-preview.cn/repository/npm-hosted/",
    "prepublish": "lerna run prod",
    "publish": "lerna publish",
    "publish:nogit": "npm run publish --  --skip-git --registry http://s1.web.porsche-preview.cn/repository/npm-hosted/",
    "remove": "lerna run vremove",
    "rp": "npm run remove \n npm run publish:nogit",
    "all": "npm-run-all remove publish:nogit"
  },
  "changelog": {
    "repo": "https://gitlab.porsche-preview.cn/porsche-digital-china/web/pui/",
    "labels": {
      "enhancement": ":rocket Enhancement",
      "fix": ":bug: Bug Fix",
      "doc": "Refine Doc",
      "feat": "New Feature",
      "style": "Style change"
    },
    "cacheDir": ".changelog"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "dependencies": {}
}
