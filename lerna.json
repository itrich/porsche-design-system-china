{
  "packages": [
    "libs/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "http://localhost:4800/",
      "allowBranch": ["master", "feature/*", "develop", "staging"]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
