{
  "packages": ["libs/*"],
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "http://s1.web.porsche-preview.cn/repository/npm-hosted/",
      "allowBranch": ["master", "feature/*", "develop", "staging"]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
